# Database
MONGODB_URI=mongodb://localhost:27017/renthome
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/renthome

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Frontend URL
CLIENT_URL=http://localhost:5173
CLIENT_URL_PROD=https://your-frontend-domain.com

# Admin
ADMIN_EMAIL=admin@renthome.com

# File Upload
MAX_FILE_SIZE=5000000
UPLOAD_PATH=./uploads

# Email (Optional - for future features)
EMAIL_FROM=noreply@renthome.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
